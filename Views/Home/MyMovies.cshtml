@{
    ViewBag.Title = "My Movies";
}
@model IQueryable<Movie>


<div>
    <h1>@ViewBag.Title</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited?</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                @if (movie.Title != "Independence Day")
                {
                    <tr>
                        <td>@movie.Category</td>
                        <td>@movie.Title</td>
                        <td>@movie.Year</td>
                        <td>@movie.Director</td>
                        <td>@movie.Rating</td>
                        <td>@movie.Edited</td>
                        <td>@movie.LentTo</td>
                        <td>@movie.Notes</td>
                    </tr>
}

            }
        </tbody>
    </table>
</div>
