@{
    ViewBag.Title = "My Movies";
}
@model IQueryable<Movie>


<div>
    <h1>@ViewBag.Title</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited?</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                @if (movie.Title != "Independence Day")
                {
            <tr>
                <td>@movie.Category</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>
                <td>
                    <a asp-action="Update" asp-route-id="@movie.MovieID">Update</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@movie.MovieID" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
                
            </tr>
}

            }
        </tbody>
    </table>
</div>
